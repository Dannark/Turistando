<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Turistando" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>

        <!-- Default Properties -->
<!--        <item name="android:fontFamily">@font/ubuntu</item>-->
<!--        <item name="fontFamily">@font/ubuntu</item>-->
    </style>
    
    <style name="TextAppearance.TitleBig" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TitleMid" parent="TextAppearance.TitleBig">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="Widget.AppCompat.TextView">
    </style>

    <style name="ImageAppearance.Icons" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/black</item>
    </style>

</resources>